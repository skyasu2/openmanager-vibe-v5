{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "./"],
      "env": {
        "NODE_OPTIONS": "--max-old-space-size=512"
      },
      "description": "파일 시스템 전체 접근",
      "enabled": true
    },
    "git": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-git"],
      "env": {
        "GIT_ENHANCED": "true"
      },
      "description": "Git 리포지토리 관리",
      "enabled": true
    },
    "web-search": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-duckduckgo-search"],
      "env": {
        "SEARCH_ENHANCED": "true"
      },
      "description": "실시간 웹 검색",
      "enabled": true
    },
    "sequential-thinking": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"],
      "env": {
        "THINKING_MODE": "development",
        "MAX_DEPTH": "10"
      },
      "description": "고급 순차적 사고",
      "enabled": true
    },
    "openmanager-local": {
      "command": "node",
      "args": ["./mcp-server/server.js"],
      "env": {
        "NODE_ENV": "development",
        "PORT": "3100",
        "DEBUG": "true"
      },
      "description": "OpenManager 로컬 개발 서버",
      "enabled": true
    },
    "typescript-analyzer": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-typescript"],
      "env": {
        "TS_CONFIG_PATH": "./tsconfig.json",
        "TYPE_CHECK": "true"
      },
      "description": "TypeScript 분석 및 타입체크",
      "enabled": true
    },
    "nodejs-debugger": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-nodejs"],
      "env": {
        "DEBUG_MODE": "true",
        "NODE_INSPECTOR": "true"
      },
      "description": "Node.js 디버깅 도구",
      "enabled": true
    },
    "package-manager": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-npm"],
      "env": {
        "NPM_ENHANCED": "true"
      },
      "description": "NPM 패키지 관리",
      "enabled": true
    }
  },
  "environment": "full-developer",
  "purpose": "완전한 개발 환경",
  "features": {
    "fileAccess": true,
    "gitIntegration": true,
    "webSearch": true,
    "thinking": true,
    "typescript": true,
    "debugging": true,
    "packageManagement": true,
    "localServer": true
  },
  "performance": {
    "memoryLimit": "1GB",
    "timeout": 30000,
    "maxConcurrentRequests": 8
  }
}
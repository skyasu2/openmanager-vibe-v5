# WSL2 최적화 설정 예시 (2024년 기준)
# Windows 사용자 홈 디렉토리(C:\Users\사용자명)에 .wslconfig 파일로 저장

[wsl2]
# 메모리 할당 (시스템 메모리의 50% 권장)
memory=8GB

# CPU 코어 수 (물리 코어의 절반 권장)
processors=4

# 스왑 파일 크기 (메모리의 25-50% 권장)
swap=4GB

# localhost 포워딩 활성화 (개발 서버 접근용)
localhostForwarding=true

# 가상 하드 디스크 크기 제한 (선택사항)
# diskSizeGB=512

# 네트워크 모드 (기본: NAT)
# networkingMode=NAT

[experimental]
# 메모리 자동 회수 (Windows 11 22H2+)
# autoMemoryReclaim=gradual

# 희소 VHD로 디스크 공간 절약
# sparseVhd=true

# 저장 후 PowerShell 관리자 권한으로:
# wsl --shutdown
# 그 다음 WSL 재시작

# 성능 팁:
# - Node.js 프로젝트는 WSL 파일시스템(/home/user/)에 저장 권장
# - Windows Defender에서 프로젝트 폴더 제외 설정
# - Visual Studio Code에서 Remote-WSL 확장 사용
{
  "extends": "./tsconfig.json",
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "scripts/**/*.ts",
    "scripts/**/*.js",
    "*.config.ts",
    "*.config.js",
    "*.config.mjs"
  ],
  "exclude": ["node_modules", ".next", "out", "build"]
}

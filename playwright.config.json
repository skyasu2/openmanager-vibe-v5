{
  "projects": [
    {
      "name": "chromium",
      "use": {
        "browserName": "chromium",
        "launchOptions": {
          "args": [
            "--no-sandbox",
            "--disable-setuid-sandbox",
            "--disable-dev-shm-usage",
            "--disable-gpu",
            "--remote-debugging-port=9222"
          ],
          "headless": false
        }
      }
    }
  ],
  "use": {
    "isolated": true,
    "baseURL": "http://localhost:3000"
  },
  "globalSetup": "./global-setup.js",
  "globalTeardown": "./global-teardown.js"
}
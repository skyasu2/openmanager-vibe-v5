{
  "extends": ["next/core-web-vitals"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    },
    "project": false,
    "EXPERIMENTAL_useProjectService": false
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "@typescript-eslint/no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],
    "@typescript-eslint/no-explicit-any": "warn", // 보안 강화: any 타입 검사 활성화
    "no-console": "off",
    "react-hooks/exhaustive-deps": "warn",
    // 성능 최적화를 위한 추가 규칙들
    "@typescript-eslint/prefer-const": "warn",
    "@typescript-eslint/no-unnecessary-type-assertion": "warn"
  },
  "ignorePatterns": [
    "**/.next/**",
    "**/node_modules/**",
    "**/coverage/**",
    "**/dist/**",
    "**/build/**",
    "**/storybook-static/**",
    "scripts/**",
    "config/**",
    "public/**",
    "docs/**",
    "**/*.config.*",
    "**/*.d.ts",
    "**/generated/**",
    "**/*.stories.*",
    "**/*.test.*",
    "**/*.spec.*"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}

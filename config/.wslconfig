###############################################
# OpenManager VIBE v5 WSL2 설정 (2025-10-06) #
###############################################
# 경로: %USERPROFILE%\.wslconfig
# 목적: 개발 환경 최적화 (MCP 10/10 연결, Node.js 빌드 개선)
# 적용: wsl --shutdown 후 재시작 시 반영

[wsl2]
# 메모리: 호스트 32GB 기준 62.5% 할당 (개발 환경 최적화)
# 변경: 16GB -> 20GB (Node.js 빌드, MCP 서버 안정성 향상)
memory=20GB

# CPU: 호스트 여유 4코어 확보 (Windows/IDE/브라우저)
# 변경: 12 -> 14 (병렬 처리 효율 증가)
processors=14

# 스왑: 메모리 증가로 4GB 유지 (디스크 I/O 최소화)
swap=4GB

# 스왑 파일 경로
swapFile=D:\\wsl-swap.vhdx

# 로컬호스트 포워딩 (필수)
localhostForwarding=true

# 디버그 콘솔 비활성화
debugConsole=false

[experimental]
# 점진적 메모리 회수 (백그라운드 최적화)
autoMemoryReclaim=gradual

# 희소 VHD 활성화 (디스크 공간 절약)
sparseVhd=true

# DNS 최적화 (MCP 연결 안정성)
dnsTunneling=true
autoProxy=true

###############################################
# 적용 절차 (WSL 재시작 필요)
###############################################
# Windows PowerShell에서 실행:
# 1) wsl --shutdown
# 2) 새 WSL 터미널 열기
# 3) 확인: free -h (메모리 20GB 확인)
# 4) 확인: nproc (CPU 14코어 확인)

###############################################
# 성능 모니터링
###############################################
# 메모리 사용량: free -h
# CPU 코어 수: nproc
# 스왑 사용량: swapon --show

###############################################
# 이전 설정 (참조용)
###############################################

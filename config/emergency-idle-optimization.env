# 🚨 긴급 중지 상태 사용량 최적화 설정
# 시스템이 중지된 상태에서 API 호출을 최소화하여 Vercel 사용량을 절약합니다.

# === 긴급 최적화 활성화 ===
EMERGENCY_IDLE_OPTIMIZATION=true
AUTO_ACTIVATE_IDLE_OPTIMIZATION=true

# === 스케줄러 비활성화 ===
SERVER_DATA_SCHEDULER_DISABLED=true
KEEP_ALIVE_SCHEDULER_DISABLED=true
UNIFIED_METRICS_SCHEDULER_DISABLED=true
AI_ANALYSIS_SCHEDULER_DISABLED=true

# === 폴링 간격 최적화 ===
SYSTEM_POLLING_INTERVAL=300000  # 5분 (300,000ms)
NORMAL_POLLING_INTERVAL=30000   # 30초 (정상 상태)
IDLE_POLLING_INTERVAL=300000    # 5분 (중지 상태)
EMERGENCY_POLLING_INTERVAL=600000  # 10분 (응급 모드)

# === 중지 상태 감지 ===
IDLE_DETECTION_INTERVAL=60000   # 1분마다 중지 상태 확인
IDLE_THRESHOLD=300000           # 5분 비활성 시 중지 상태로 간주

# === 백그라운드 프로세스 제어 ===
DISABLE_SCHEDULERS_ON_IDLE=true
DISABLE_KEEP_ALIVE_ON_IDLE=true
SYSTEM_POLLING_DISABLED=true

# === 응급 모드 설정 ===
EMERGENCY_MODE_ACTIVE=true

# === React Query 최적화 ===
REACT_QUERY_REFETCH_INTERVAL=300000
REACT_QUERY_STALE_TIME=300000
REACT_QUERY_CACHE_TIME=600000

# === 사용량 모니터링 ===
LOG_API_CALLS=true
TRACK_USAGE_METRICS=true

# === 개발 환경 설정 ===
NODE_ENV=production 
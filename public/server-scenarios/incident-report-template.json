{
  "incident_report_template": {
    "title": "자동 장애 보고서",
    "description": "AI가 실시간 메트릭스 데이터를 분석하여 자동 생성하는 장애 보고서 템플릿",
    "version": "1.0.0",
    "created_by": "OpenManager VIBE v5 AI System"
  },
  
  "report_structure": {
    "executive_summary": {
      "source": "aiContext.natural_language_summary",
      "description": "경영진용 한 줄 요약",
      "example": "점심시간 트래픽 급증으로 DB 연결 한계 도달, 3개 시스템 영향"
    },
    
    "incident_timeline": {
      "source": "aiContext.timeline + detailedMetrics timestamps",
      "description": "30초 간격 상세 시간별 진행상황",
      "structure": {
        "start_time": "first anomaly detected",
        "peak_time": "maximum impact",
        "recovery_time": "back to normal",
        "duration": "total incident duration"
      }
    },
    
    "affected_systems": {
      "source": "aiContext.affected_services + servers[].incident",
      "description": "영향받은 시스템과 서비스",
      "categories": {
        "critical_systems": "status === 'critical'",
        "degraded_systems": "status === 'warning'", 
        "healthy_systems": "status === 'healthy'"
      }
    },
    
    "root_cause_analysis": {
      "source": "aiContext.root_causes + servers[].incident.reason",
      "description": "근본 원인 분석 및 연관관계",
      "structure": {
        "primary_cause": "main root cause",
        "contributing_factors": "secondary causes",
        "cascade_effects": "how one issue led to others"
      }
    },
    
    "business_impact_assessment": {
      "source": "aiContext.business_impact + user_experience_impact",
      "description": "비즈니스 영향도 평가",
      "metrics": {
        "severity": "high/medium/low",
        "affected_users": "estimated user count",
        "service_degradation": "performance impact %",
        "revenue_impact": "potential revenue loss"
      }
    },
    
    "technical_details": {
      "source": "detailedMetrics + servers[].metrics",
      "description": "기술적 상세 정보",
      "includes": {
        "performance_metrics": "CPU/Memory/Disk/Network usage",
        "threshold_violations": "which metrics exceeded limits",
        "correlation_analysis": "relationship between metrics",
        "anomaly_patterns": "unusual behavior detection"
      }
    },
    
    "recovery_actions_taken": {
      "source": "aiContext.recovery_actions + servers[].incident.recovery_actions", 
      "description": "복구를 위해 실행된 액션들",
      "structure": {
        "immediate_actions": "emergency response",
        "mitigation_steps": "damage control",
        "resolution_steps": "permanent fix"
      }
    },
    
    "lessons_learned": {
      "source": "analysis of incident patterns",
      "description": "향후 예방을 위한 교훈",
      "categories": {
        "prevention_measures": "how to prevent recurrence",
        "early_detection": "warning signs to monitor", 
        "process_improvements": "operational enhancements"
      }
    },
    
    "recommendations": {
      "source": "aiContext + historical pattern analysis",
      "description": "향후 개선 권장사항",
      "priorities": {
        "immediate": "urgent fixes needed",
        "short_term": "1-4 weeks improvements",
        "long_term": "strategic infrastructure changes"
      }
    }
  },
  
  "ai_query_examples": {
    "natural_language_queries": [
      "점심시간에 어떤 문제가 발생했나요?",
      "데이터베이스 성능 이슈의 원인이 무엇인가요?",
      "어떤 시스템이 가장 자주 문제를 일으키나요?",
      "트래픽 피크 시간대는 언제인가요?",
      "복구를 위해 어떤 조치를 취해야 하나요?"
    ],
    "structured_queries": [
      "SELECT * WHERE severity_level = 'high'",
      "FIND incidents WITH root_cause LIKE 'traffic_overload'",
      "ANALYZE performance_degradation BETWEEN 12:00 AND 14:00",
      "CORRELATE cpu_usage WITH response_time",
      "PREDICT next_incident_probability BASED ON current_metrics"
    ]
  },
  
  "automation_capabilities": {
    "real_time_monitoring": {
      "description": "30초 간격 실시간 메트릭스 분석",
      "features": [
        "anomaly_detection",
        "threshold_monitoring", 
        "pattern_recognition",
        "predictive_alerting"
      ]
    },
    
    "intelligent_alerting": {
      "description": "AI 기반 스마트 알람 시스템",
      "features": [
        "context_aware_alerts",
        "severity_classification",
        "false_positive_reduction",
        "escalation_automation"
      ]
    },
    
    "automated_response": {
      "description": "자동 대응 액션 실행",
      "capabilities": [
        "auto_scaling_triggers",
        "failover_initiation", 
        "load_balancing_adjustment",
        "resource_optimization"
      ]
    },
    
    "report_generation": {
      "description": "자동 보고서 생성 및 배포",
      "outputs": [
        "executive_dashboard_updates",
        "technical_team_notifications",
        "stakeholder_status_reports",
        "compliance_documentation"
      ]
    }
  },
  
  "integration_apis": {
    "description": "외부 시스템 연동을 위한 API 엔드포인트",
    "endpoints": {
      "/api/incidents/current": "현재 진행중인 장애 정보",
      "/api/incidents/history": "과거 장애 이력 조회",
      "/api/reports/generate": "자동 보고서 생성",
      "/api/analytics/trends": "장애 트렌드 분석",
      "/api/predictions/risk": "위험도 예측",
      "/api/recommendations/actions": "권장 액션 제안"
    }
  }
}
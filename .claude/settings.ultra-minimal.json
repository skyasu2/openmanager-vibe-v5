{
  "comment": "초최소화 훅 설정 - Claude Code 자율성 최대화",
  "permissions": {
    "allow": ["*"],
    "deny": []
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "filesystem",
    "memory", 
    "github",
    "supabase",
    "sequential-thinking"
  ],
  "hooks": {
    "PreToolUse": [
      {
        "comment": "파괴적 DB 작업만 차단",
        "matcher": "mcp__supabase__.*",
        "hooks": [{
          "type": "command",
          "command": "./hooks/pre-database-hook-ultra-minimal.sh"
        }]
      }
    ]
  }
}
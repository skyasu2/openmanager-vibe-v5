{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Optimized MCP Server Configuration for OpenManager VIBE v5 - WSL Ubuntu Environment",
  "version": "2.0.0",
  "lastUpdated": "2025-07-28T08:30:00+09:00",
  "mcpServers": {
    "filesystem": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem@0.8.0", "."],
      "env": {
        "NODE_OPTIONS": "--max-old-space-size=6144 --enable-source-maps",
        "NODE_ENV": "development"
      },
      "description": "Core filesystem operations - Read, Write, Edit, Search files",
      "priority": 1,
      "healthCheck": true
    },
    "github": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github@0.8.0"],
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}",
        "GITHUB_API_URL": "${GITHUB_API_URL:-https://api.github.com}",
        "NODE_OPTIONS": "--max-old-space-size=4096"
      },
      "description": "GitHub repository management and code operations",
      "priority": 2,
      "healthCheck": true
    },
    "memory": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory@0.8.0"],
      "env": {
        "NODE_OPTIONS": "--max-old-space-size=4096",
        "MEMORY_STORE_PATH": "${HOME}/.claude/memory"
      },
      "description": "Knowledge graph and memory management",
      "priority": 3,
      "healthCheck": true
    },
    "supabase": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@supabase/mcp-server-supabase@1.0.4"],
      "env": {
        "SUPABASE_URL": "${SUPABASE_URL}",
        "SUPABASE_SERVICE_ROLE_KEY": "${SUPABASE_SERVICE_ROLE_KEY}",
        "SUPABASE_ANON_KEY": "${SUPABASE_ANON_KEY}",
        "SUPABASE_ACCESS_TOKEN": "${SUPABASE_ACCESS_TOKEN}",
        "NODE_OPTIONS": "--max-old-space-size=4096"
      },
      "description": "Database operations and management",
      "priority": 4,
      "healthCheck": true
    },
    "context7": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp@0.2.1"],
      "env": {
        "UPSTASH_REDIS_REST_URL": "${UPSTASH_REDIS_REST_URL}",
        "UPSTASH_REDIS_REST_TOKEN": "${UPSTASH_REDIS_REST_TOKEN}",
        "NODE_OPTIONS": "--max-old-space-size=2048"
      },
      "description": "Library documentation retrieval and search",
      "priority": 5,
      "healthCheck": true
    },
    "tavily-mcp": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "tavily-mcp@0.2.9"],
      "env": {
        "TAVILY_API_KEY": "${TAVILY_API_KEY}",
        "NODE_OPTIONS": "--max-old-space-size=2048",
        "TAVILY_MAX_RESULTS": "10"
      },
      "description": "Web search and content extraction",
      "priority": 6,
      "healthCheck": true
    },
    "sequential-thinking": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/sequential-thinking@0.8.0"],
      "env": {
        "NODE_OPTIONS": "--max-old-space-size=2048"
      },
      "description": "Complex problem-solving and analysis",
      "priority": 7,
      "healthCheck": true
    },
    "playwright": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@playwright/mcp@0.1.1"],
      "env": {
        "PLAYWRIGHT_BROWSERS_PATH": "${HOME}/.cache/ms-playwright",
        "PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD": "true",
        "NODE_OPTIONS": "--max-old-space-size=4096",
        "BROWSER_EXECUTABLE_PATH": "/usr/bin/chromium-browser"
      },
      "description": "Browser automation and testing",
      "priority": 8,
      "healthCheck": true
    },
    "serena": {
      "type": "stdio",
      "command": "uvx",
      "args": ["--from", "git+https://github.com/oraios/serena@v0.8.0", "serena-mcp-server"],
      "env": {
        "PYTHON_PATH": "/usr/bin/python3",
        "UV_CACHE_DIR": "${HOME}/.cache/uv"
      },
      "description": "Advanced code analysis and refactoring",
      "priority": 9,
      "healthCheck": true,
      "initCommand": "uvx --from git+https://github.com/oraios/serena@v0.8.0 serena-mcp-server activate_project /mnt/d/cursor/openmanager-vibe-v5"
    },
    "time": {
      "type": "stdio",
      "command": "uvx",
      "args": ["mcp-server-time"],
      "env": {
        "PYTHON_PATH": "/usr/bin/python3",
        "UV_CACHE_DIR": "${HOME}/.cache/uv"
      },
      "description": "Time and timezone conversion services",
      "priority": 10,
      "healthCheck": true
    }
  },
  "globalSettings": {
    "timeout": 30000,
    "retryAttempts": 3,
    "retryDelay": 1000,
    "healthCheckInterval": 300000,
    "logLevel": "info",
    "enableMetrics": true,
    "wslOptimizations": {
      "enableFileWatching": false,
      "useNativePathSeparators": true,
      "enableCaching": true
    }
  },
  "monitoring": {
    "enabled": true,
    "endpoints": {
      "health": "/api/mcp/health",
      "metrics": "/api/mcp/metrics",
      "status": "/api/mcp/status"
    }
  }
}
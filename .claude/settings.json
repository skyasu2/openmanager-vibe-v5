{
  "statusLine": {
    "type": "command",
    "command": "node scripts/ccusage-simple-status.js",
    "padding": 0
  },
  "locale": "ko-KR",
  "timezone": "Asia/Seoul",
  "permissions": {
    "allow": [
      "Bash(node:*)",
      "Bash(npm:*)",
      "Bash(git:*)",
      "Bash(claude:*)",
      "Bash(ccusage:*)",
      "mcp__*"
    ],
    "deny": ["Bash(rm -rf:*)", "Bash(sudo rm:*)"]
  }
}

{
  "env": {
    "CLAUDE_CODE_NO_TERMINAL_QUERY": "1",
    "DISABLE_AUTO_TITLE": "true",
    "CLAUDE_CODE_SUPPRESS_ESCAPE_SEQUENCES": "1",
    "FORCE_COLOR": "0",
    "CI": "true",
    "TERM": "dumb",
    "NONINTERACTIVE": "1",
    "NO_READLINE": "1",
    "NODE_NO_READLINE": "1",
    "NODE_DISABLE_COLORS": "1",
    "FORCE_TTY": "false"
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "echo '${file}' >> .claude/cross-verification-queue.txt"
          }
        ]
      },
      {
        "condition": "${file}.match(/\\/(auth|api|security|payment)\\//) || ${file}.includes('.env') || ${file}.includes('config')",
        "hooks": [
          {
            "type": "command", 
            "command": "echo '${file}|LEVEL_3|SECURITY' >> .claude/high-priority-verification-queue.txt"
          }
        ]
      }
    ]
  }
}
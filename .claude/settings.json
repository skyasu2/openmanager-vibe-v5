{
  "outputStyle": "color",
  "env": {
    "FORCE_COLOR": "1"
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "./node_modules/.bin/biome format --write \"$(echo $CLAUDE_TOOL_INPUT | jq -r '.file_path // empty')\" 2>/dev/null || true",
            "timeout": 10,
            "showOutput": false
          }
        ]
      }
    ]
  }
}

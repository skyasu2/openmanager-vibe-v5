{
  "comment": "간소화된 훅 설정 - 필수 기능만 유지",
  "permissions": {
    "allow": [
      "WebFetch(domain:docs.anthropic.com)",
      "Bash(claude --doctor)",
      "Bash(find:*)",
      "Bash(ls:*)",
      "Bash(chmod:*)",
      "Bash(bash:*)",
      "Bash(grep:*)",
      "Bash(rm:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)"
    ],
    "deny": []
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "filesystem",
    "memory",
    "github",
    "supabase"
  ],
  "hooks": {
    "PreToolUse": [
      {
        "comment": "위험한 DB 작업만 차단",
        "matcher": "mcp__supabase__.*",
        "hooks": [
          {
            "type": "command",
            "command": "./hooks/pre-database-hook-minimal.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "comment": "보안 파일 수정 시 권장사항만",
        "matcher": "Write|Edit",
        "filter": "(auth|payment|admin|secret)",
        "hooks": [
          {
            "type": "command",
            "command": "./hooks/post-security-hook-minimal.sh"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "comment": "에이전트 실행 간단 로그",
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "./hooks/agent-completion-hook-minimal.sh"
          }
        ]
      }
    ]
  }
}
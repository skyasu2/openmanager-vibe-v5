{
  "mcpServers": {
    "openmanager-filesystem": {
      "command": "node",
      "args": ["./mcp-server/server.js"],
      "cwd": ".",
      "env": {
        "NODE_ENV": "development",
        "PROJECT_ROOT": "."
      }
    },
    "filesystem": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-filesystem", "./docs", "./src"],
      "env": {
        "NODE_ENV": "development"
      }
    },
    "github": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      }
    }
  }
}

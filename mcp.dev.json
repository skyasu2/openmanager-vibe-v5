{
  "mcpServers": {
    "openmanager-filesystem": {
      "command": "node",
      "args": ["./mcp-server/server.js"],
      "cwd": ".",
      "env": {
        "NODE_ENV": "development",
        "PORT": "3100",
        "PROJECT_ROOT": "."
      }
    },
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "./docs", "./src"],
      "env": {
        "NODE_ENV": "development"
      }
    },
    "duckduckgo-search": {
      "command": "npx",
      "args": ["-y", "duckduckgo-mcp-server"]
    },
    "sequential-thinking": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"],
      "env": {
        "NODE_ENV": "development"
      },
      "description": "단계별 사고 및 문제 해결 지원"
    }
  }
}

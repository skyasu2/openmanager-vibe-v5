{
  "mcpServers": {
    "openmanager-local": {
      "command": "node",
      "args": ["./mcp-server/server.js"],
      "cwd": ".",
      "env": {
        "NODE_ENV": "development",
        "MCP_ENV": "cursor",
        "PORT": "3100",
        "PROJECT_ROOT": "."
      }
    },
    "filesystem": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-filesystem", "./src", "./docs"],
      "env": {
        "NODE_ENV": "development"
      }
    },
    "git": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-git", "--repository", "."]
    },
    "duckduckgo-search": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-duckduckgo-search"]
    },
    "sequential-thinking": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-sequential-thinking"],
      "env": {
        "NODE_ENV": "development"
      },
      "description": "단계별 사고 및 문제 해결 지원"
    }
  }
}

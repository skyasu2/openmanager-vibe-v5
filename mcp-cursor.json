{
  "mcpServers": {
    "openmanager-filesystem": {
      "command": "node",
      "args": ["./mcp-server/server.js"],
      "cwd": ".",
      "env": {
        "NODE_ENV": "development",
        "PROJECT_ROOT": "."
      }
    },
    "render-mcp": {
      "command": "curl",
      "args": [
        "-X",
        "POST",
        "https://openmanager-mcp-server.onrender.com/mcp",
        "-H",
        "Content-Type: application/json"
      ],
      "description": "Render에 배포된 OpenManager MCP 서버",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "filesystem": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-filesystem", "./docs", "./src"],
      "env": {
        "NODE_ENV": "development"
      }
    },
    "git": {
      "command": "npx",
      "args": ["-y", "@smithery/git-mcp"],
      "env": {
        "NODE_ENV": "development"
      }
    },
    "browser-tools": {
      "command": "npx",
      "args": ["-y", "@smithery/browser-tools-mcp"],
      "env": {
        "NODE_ENV": "development"
      }
    },
    "apidog": {
      "command": "npx",
      "args": ["-y", "@smithery/apidog-mcp"],
      "env": {
        "NODE_ENV": "development"
      }
    }
  }
}

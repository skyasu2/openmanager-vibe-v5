{
  "metadata": {
    "type": "base_patterns",
    "version": "1.0.0",
    "lastUpdated": "2024-12-19",
    "readonly": true,
    "description": "기본 패턴 매칭 규칙 (변경 금지)"
  },
  "intentPatterns": {
    "server_status": {
      "patterns": [
        "서버.*상태",
        "서버.*어떻게",
        "상태.*확인",
        "서버.*체크",
        "시스템.*상태"
      ],
      "confidence": 0.9,
      "category": "monitoring"
    },
    "performance_check": {
      "patterns": [
        "CPU.*사용률",
        "메모리.*사용량",
        "디스크.*공간",
        "네트워크.*트래픽",
        "성능.*확인"
      ],
      "confidence": 0.85,
      "category": "performance"
    },
    "error_analysis": {
      "patterns": [
        "에러.*분석",
        "오류.*원인",
        "장애.*대응",
        "문제.*해결",
        "트러블.*슈팅"
      ],
      "confidence": 0.8,
      "category": "troubleshooting"
    },
    "alert_management": {
      "patterns": [
        "알림.*설정",
        "경고.*관리",
        "임계값.*조정",
        "알람.*확인",
        "notification.*config"
      ],
      "confidence": 0.75,
      "category": "alerts"
    }
  },
  "responseTemplates": {
    "server_status_response": {
      "template": "현재 서버 상태를 확인해드리겠습니다. 전체 {total_servers}대 중 정상 {healthy_servers}대, 주의 {warning_servers}대, 위험 {critical_servers}대입니다.",
      "requiredData": ["total_servers", "healthy_servers", "warning_servers", "critical_servers"],
      "category": "monitoring"
    },
    "performance_response": {
      "template": "{metric_name} 사용률이 {current_value}%입니다. {status_description}",
      "requiredData": ["metric_name", "current_value", "status_description"],
      "category": "performance"
    },
    "error_response": {
      "template": "분석 결과 {error_type} 오류가 감지되었습니다. 권장 조치: {recommended_action}",
      "requiredData": ["error_type", "recommended_action"],
      "category": "troubleshooting"
    }
  },
  "keywordExtraction": {
    "serverTypes": [
      "웹서버", "DB서버", "API서버", "파일서버", "메일서버",
      "로드밸런서", "프록시", "캐시서버", "백업서버"
    ],
    "metrics": [
      "CPU", "메모리", "디스크", "네트워크", "응답시간",
      "처리량", "연결수", "큐길이", "에러율"
    ],
    "severityLevels": [
      "정상", "주의", "경고", "위험", "심각",
      "normal", "warning", "critical", "emergency"
    ],
    "actions": [
      "재시작", "중지", "시작", "확인", "분석",
      "백업", "복구", "업데이트", "패치", "모니터링"
    ]
  },
  "validationRules": {
    "serverNamePattern": "^[a-zA-Z0-9-_]+$",
    "ipAddressPattern": "^(?:(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.){3}(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)$",
    "portPattern": "^([1-9][0-9]{0,3}|[1-5][0-9]{4}|6[0-4][0-9]{3}|65[0-4][0-9]{2}|655[0-2][0-9]|6553[0-5])$",
    "percentagePattern": "^(100|[1-9]?[0-9])$"
  }
} 
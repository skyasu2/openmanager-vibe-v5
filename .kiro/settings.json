{
  "terminal": {
    "defaultCwd": "${workspaceFolder}",
    "autoChangeDirectory": true,
    "profiles": {
      "windows": {
        "PowerShell": {
          "path": "powershell.exe",
          "args": [
            "-NoExit",
            "-Command",
            "Set-Location '${workspaceFolder}'; Write-Host 'Kiro IDE - 워크스페이스 준비 완료!' -ForegroundColor Green"
          ],
          "icon": "terminal-powershell"
        },
        "Command Prompt": {
          "path": "cmd.exe",
          "args": ["/K", "cd", "/d", "${workspaceFolder}"],
          "icon": "terminal-cmd"
        },
        "WSL": {
          "path": "wsl.exe",
          "args": [
            "-d", "Ubuntu-24.04",
            "--cd", "/mnt/d/cursor/openmanager-vibe-v5"
          ],
          "icon": "terminal-ubuntu"
        },
        "WSL Bash": {
          "path": "wsl.exe",
          "args": [
            "-d", "Ubuntu-24.04",
            "--cd", "/mnt/d/cursor/openmanager-vibe-v5",
            "--exec", "bash", "-l"
          ],
          "icon": "terminal-bash"
        }
      }
    }
  },
  "workspace": {
    "rootPath": "D:\\cursor\\openmanager-vibe-v5",
    "autoDetectRoot": true,
    "preserveTerminalCwd": true
  },
  "ui": {
    "language": "ko-KR",
    "theme": "dark"
  },
  "development": {
    "autoSave": true,
    "formatOnSave": true,
    "linting": true,
    "wsl": {
      "enabled": true,
      "defaultDistribution": "Ubuntu-24.04",
      "projectPath": "/mnt/d/cursor/openmanager-vibe-v5",
      "nodeVersion": "v22.18.0"
    },
    "multiIde": {
      "role": "project-manager",
      "primaryTasks": ["설정 관리", "터미널 통합", "프로젝트 구조"],
      "claudeIntegration": true,
      "wslPriority": true
    }
  },
  "extensions": {
    "wsl": {
      "enabled": true,
      "autoConnect": true
    },
    "claude": {
      "enabled": true,
      "apiKey": "${ANTHROPIC_API_KEY}",
      "model": "claude-3-5-sonnet-20241022"
    }
  }
}

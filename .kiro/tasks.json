{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Claude: Start Session",
      "type": "shell",
      "command": "wsl",
      "args": ["-d", "Ubuntu-24.04", "--", "claude", "--version"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Claude: Code Review",
      "type": "shell", 
      "command": "wsl",
      "args": ["-d", "Ubuntu-24.04", "--", "claude", "review", "${file}"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "WSL: Open Terminal",
      "type": "shell",
      "command": "wsl",
      "args": ["-d", "Ubuntu-24.04", "--cd", "/mnt/d/cursor/openmanager-vibe-v5"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      }
    }
  ]
}
{
  "extends": [
    "next/core-web-vitals"
  ],
  "rules": {
    "react-hooks/exhaustive-deps": "warn",
    "@next/next/no-img-element": "warn",
    "react/no-unescaped-entities": "warn",
    "import/no-anonymous-default-export": "warn"
  },
  "ignorePatterns": [
    "*.stories.*",
    "src/stories/**/*"
  ],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {
        "@typescript-eslint/no-require-imports": "off"
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  }
}
{
  "extends": ["next/core-web-vitals", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    },
    "project": "./tsconfig.json",
    "tsconfigRootDir": ".",
    "cache": true,
    "cacheLocation": ".next/cache/eslint/"
  },
  "plugins": ["@typescript-eslint", "prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "printWidth": 80
      }
    ],
    "@typescript-eslint/no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],
    "@typescript-eslint/no-explicit-any": "warn", // 점진적 마이그레이션을 위해 warn으로 시작
    "no-console": "off",
    "react-hooks/exhaustive-deps": "warn"
  },
  "ignorePatterns": [
    "**/.next/**",
    "**/node_modules/**",
    "**/coverage/**",
    "**/dist/**",
    "**/build/**",
    "scripts/**",
    "config/**",
    "public/**",
    "docs/**",
    "local-dev/**",
    "**/*.config.*",
    "**/*.d.ts"
  ]
}

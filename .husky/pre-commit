#!/bin/sh

echo "🚀 Pre-commit 검증 시작..."

# 환경 변수로 스킵 가능
if [ "$HUSKY" = "0" ]; then
    echo "⏭️  Husky가 비활성화되어 있습니다. 검증을 건너뜁니다."
    exit 0
fi

# 타입 체크
echo "📝 타입 체크 중..."
npm run type-check
if [ $? -ne 0 ]; then
    echo "❌ 타입 체크 실패!"
    exit 1
fi

# 린트
echo "🧹 린트 검사 중..."
npm run lint
if [ $? -ne 0 ]; then
    echo "❌ 린트 검사 실패!"
    exit 1
fi

echo "✅ Pre-commit 검증 통과!"
#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Pre-commit 검증 시작..."

# 비밀 키 스캔
echo "🔐 비밀 키 유출 검사..."
node scripts/precommit-check-secrets.js
if [ $? -ne 0 ]; then
  exit 1
fi

# 타입 체크
echo "📝 TypeScript 타입 체크..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "❌ TypeScript 타입 에러가 있습니다. 수정 후 다시 커밋하세요."
  exit 1
fi

# ESLint 체크
echo "🔧 ESLint 검사..."
npm run lint
if [ $? -ne 0 ]; then
  echo "❌ ESLint 에러가 있습니다. 수정 후 다시 커밋하세요."
  exit 1
fi

# Staged 파일 포맷팅
echo "✨ 코드 포맷팅..."
npx lint-staged

echo "✅ Pre-commit 검증 완료!"

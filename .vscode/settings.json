{
  // 최소화된 안전한 워크스페이스 설정
  "terminal.integrated.cwd": "${workspaceFolder}",
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "path": "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
      "icon": "terminal-powershell",
      "startingDirectory": "${workspaceFolder}"
    }
  },
  "terminal.integrated.env.windows": {
    "HOME": "${workspaceFolder}"
  },
  // GitHub Copilot 관련 (강화된 설정)
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "typescript": true,
    "typescriptreact": true,
    "javascript": true,
    "javascriptreact": true,
    "json": true,
    "jsonc": true,
    "scminput": false
  },
  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.advanced": {
    "showEditorCompletions": true,
    "length": 500,
    "temperature": "",
    "listCount": 10,
    "debug.showScores": false
  },
  "github.copilot.chat.localeOverride": "ko",
  "github.copilot.terminal": {
    "enabled": false
  },
  // TypeScript 및 개발 도구 설정
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.importModuleSpecifier": "relative",
  "eslint.validate": [
    "typescript",
    "typescriptreact"
  ],
  "editor.formatOnSave": true,
  "tailwindCSS.includeLanguages": {
    "typescript": "typescript",
    "typescriptreact": "typescriptreact"
  },
  "files.associations": {
    "*.env.local": "dotenv",
    "AI-CONTEXT.md": "markdown"
  },
  // 리모트/WSL 동작 제한
  "remote.WSL.enabled": false,
  "remote.WSL.fileWatcher.polling": false,
  "remote.WSL.useShellEnvironment": false,
  // 일반 동작
  "workbench.startupEditor": "none",
  "tasks.autoDetect": "off",
  "terminal.integrated.shellIntegration.enabled": true,
  "terminal.integrated.inheritEnv": true
}
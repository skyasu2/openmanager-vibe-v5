{
  // ğŸ¯ TypeScript ì„¤ì •
  "typescript.preferences.quoteStyle": "single",
  "javascript.preferences.quoteStyle": "single",
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.suggest.autoImports": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.tsserver.maxTsServerMemory": 8192,
  "typescript.tsserver.experimental.enableProjectDiagnostics": false,
  "typescript.validate.enable": false,
  "typescript.suggest.includeCompletionsForImportStatements": false,
  "typescript.suggest.includeCompletionsForModuleExports": false,
  "typescript.disableAutomaticTypeAcquisition": true,

  // ğŸ¨ Prettier ì„¤ì •
  "prettier.singleQuote": true,
  "prettier.semi": true,
  "prettier.trailingComma": "es5",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  
  // ğŸ¯ ì–¸ì–´ë³„ í¬ë§·í„° ì„¤ì •
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },

  // ğŸ§ª Vitest í…ŒìŠ¤íŠ¸ ì„¤ì •
  "vitest.enable": true,
  "vitest.commandLine": "npm run test:unit",
  "vitest.disableWorkspaceWarning": true,
  "vitest.rootConfig": "./vitest.config.ts",
  "testing.automaticallyOpenPeekView": "never",
  "testing.followRunningTest": true,
  "testing.openTesting": "neverOpen",
  "testing.automaticallyOpenTestResults": "neverOpen",
  "testing.defaultGutterClickAction": "run",
  "testing.gutterEnabled": true,
  "jest.autoRun": "off",

  // ğŸ“¦ NPM ì„¤ì •
  "npm.packageManager": "npm",
  "npm.enableScriptExplorer": true,
  "npm.scriptExplorerAction": "run",

  // ğŸ¨ TailwindCSS ì„¤ì •
  "tailwindCSS.includeLanguages": {
    "typescript": "javascript",
    "typescriptreact": "javascript"
  },

  // ğŸ§ WSL-First í„°ë¯¸ë„ ì„¤ì •
  "terminal.integrated.defaultProfile.windows": "Claude Code (WSL)",
  "terminal.integrated.cwd": "${workspaceFolder}",
  "terminal.integrated.profiles.windows": {
    "Claude Code (WSL)": {
      "path": "wsl.exe",
      "args": ["-d", "Ubuntu", "cd", "/mnt/d/cursor/openmanager-vibe-v5", "&&", "claude"],
      "icon": "robot"
    },
    "WSL": {
      "path": "wsl.exe",
      "args": ["-d", "Ubuntu", "cd", "/mnt/d/cursor/openmanager-vibe-v5", "&&", "bash"],
      "icon": "terminal-ubuntu"
    },
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell",
      "args": ["-NoExit", "-Command", "Set-Location '${workspaceFolder}'"]
    }
  },

  // ğŸ”§ í„°ë¯¸ë„ ìµœì í™” ì„¤ì •
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.rightClickBehavior": "copyPaste",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontFamily": "'Cascadia Code', 'Fira Code', 'JetBrains Mono', 'Courier New', monospace",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "block",
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.fastScrollSensitivity": 5,
  "terminal.integrated.mouseWheelScrollSensitivity": 3,
  "terminal.integrated.inheritEnv": true,
  "terminal.integrated.allowChords": false,

  // ğŸ“ íŒŒì¼ ì‹œìŠ¤í…œ ìµœì í™”
  "files.eol": "\n",
  "files.encoding": "utf8",
  "files.autoGuessEncoding": true,
  "files.autoSave": "onFocusChange",
  "files.hotExit": "onExitAndWindowClose",
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/.next/**": true,
    "**/out/**": true,
    "**/build/**": true,
    "**/dist/**": true,
    "**/.cache/**": true,
    "**/logs/**": true,
    "**/.vercel/**": true,
    "**/google-cloud-sdk/**": true,
    "google-cloud-cli-linux-x86_64.tar.gz": true,
    "**/.local/**": true
  },
  "files.exclude": {
    "**/node_modules": true,
    "**/.next": true,
    "**/google-cloud-sdk": true,
    "google-cloud-cli-linux-x86_64.tar.gz": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.local": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/google-cloud-sdk": true,
    "**/.next": true,
    "**/.local": true
  },

  // ğŸ” ESLint ì„¤ì •
  "eslint.enable": true,
  "eslint.experimental.useFlatConfig": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },

  // ğŸ”— Git ì„¤ì •
  "git.useIntegratedTerminal": true,
  "git.terminalAuthentication": true,
  "git.ignoreLimitWarning": true,
  "git.autorefresh": true,
  "git.detectSubmodules": false,
  "git.countBadge": "tracked",
  "git.useEditorAsCommitInput": false,
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true,
  "git.branchProtection": ["main", "master"],

  // ğŸ¯ ì—ë””í„° ì„¤ì •
  "editor.quickSuggestions": {
    "strings": true
  },
  "editorconfig.generateAuto": false,

  // ğŸ”§ ê¸°íƒ€ ì„¤ì •
  "tasks.autoDetect": "on",
  "kiroAgent.configureMCP": "Disabled",
  "extensions.ignoreRecommendations": false,
  "workbench.startupEditor": "welcomePage",
  "workbench.settings.enableNaturalLanguageSearch": false,

  // ğŸ§ WSL í†µí•© ì„¤ì •
  "remote.WSL.fileWatcher.polling": false,
  "remote.WSL.useShellEnvironment": true
}